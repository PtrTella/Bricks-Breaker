<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane fx:id="root" maxHeight="434.0" maxWidth="624.0" minHeight="400.0" minWidth="600.0"
   prefHeight="434.0" prefWidth="624.0" style="-fx-background-color: black;"
   xmlns="http://javafx.com/javafx/15" xmlns:fx="http://javafx.com/fxml/1"
   fx:controller="brickbreaker.view.DifficultyMenuView">
   <children>
      <VBox fx:id="vbLayout" alignment="CENTER" layoutX="2.0" layoutY="1.0" prefHeight="400.0"
         prefWidth="608.0" spacing="30.0">
         <children>
            <ImageView fx:id="imgBack" fitHeight="42.0" fitWidth="90.0" onMouseClicked="#clickBack"
               pickOnBounds="true" preserveRatio="true" HBox.hgrow="NEVER">
               <VBox.margin>
                  <Insets left="10.0" top="10.0" />
               </VBox.margin>
            </ImageView>
            <ImageView fx:id="imgModeTitle" fitHeight="62.0" fitWidth="309.0"
               pickOnBounds="true" preserveRatio="true" VBox.vgrow="ALWAYS">
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </ImageView>
            <HBox fx:id="hbDifficulty" alignment="CENTER" prefHeight="187.0" prefWidth="594.0"
               spacing="30.0" VBox.vgrow="ALWAYS">
               <children>
                  <ImageView fx:id="imgDifficulty" fitHeight="104.0" fitWidth="270.0"
                     pickOnBounds="true" preserveRatio="true" HBox.hgrow="ALWAYS">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                  </ImageView>
                  <VBox fx:id="vbDifficultySelection" alignment="CENTER" prefHeight="105.0"
                     prefWidth="113.0">
                     <children>
                        <ImageView fx:id="imgUpArrow" fitHeight="26.0" fitWidth="142.0"
                           onMouseClicked="#clickUpArrow" pickOnBounds="true" preserveRatio="true" />
                        <ImageView fx:id="imgSelectedDifficulty" fitHeight="44.0" fitWidth="146.0"
                           pickOnBounds="true" preserveRatio="true">
                        </ImageView>
                        <ImageView fx:id="imgDownArrow" fitHeight="29.0" fitWidth="138.0"
                           onMouseClicked="#clickDownArrow" pickOnBounds="true" preserveRatio="true" />
                     </children>
                  </VBox>
               </children>
               <VBox.margin>
                  <Insets left="30.0" />
               </VBox.margin>
            </HBox>
            <ImageView fx:id="imgReady" fitHeight="62.0" fitWidth="200.0"
               onMouseClicked="#clickPlayButton" pickOnBounds="true" preserveRatio="true"
               VBox.vgrow="ALWAYS">
               <VBox.margin>
                  <Insets bottom="20.0" />
               </VBox.margin>
            </ImageView>
         </children>
      </VBox>
   </children>
</AnchorPane>